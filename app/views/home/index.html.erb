<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-12">
            <form class="form-signin">
                <h1 class="form-signin-heading"><i class="fa fa-users"></i>FriendOS</h1>
                <div id="registration-block">
                    <h3>Nouvel utilisateur ?</h3>
                    <button id="registration-button" class="btn btn-lg btn-success btn-block" type="submit">Créer un compte</button>
                </div>
                <h3>Déjà membre ?</h3>
                <label for="input-email" class="sr-only">Email</label>
                <input type="email" id="input-email" class="form-control" placeholder="Email" required autofocus>
                <label for="input-password" class="sr-only">Mot de passe</label>
                <input type="password" id="input-password" class="form-control" placeholder="Mot de passe" required>
                <div id="login-block">
                    <button id="login-button" class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
                    <div class="checkbox">
                        <label>
                        <input type="checkbox" value="remember-me"> Se souvenir de moi
                    </label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>